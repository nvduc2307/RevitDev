<Window x:Class="RevitDevelop.DemoST.Command3.views.Command3V"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RevitDevelop.DemoST.Command3.views"
        xmlns:langs ="clr-namespace:RevitDevelop.Properties.Langs"
        mc:Ignorable="d"
        Name="FilteSolution"
        Title="精細濾過" 
        SizeToContent="WidthAndHeight"
        MinHeight="100" 
        MaxHeight="500"
        MinWidth="600">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Height" Value="25"/>
            <Setter Property="Width" Value="70"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>
    <StackPanel Margin="15">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>
            <GroupBox 
                Grid.Column="0"
                Header="类别典型">
                <StackPanel>
                    <TreeView 
                        ItemsSource="{Binding TreeViewModels}"
                        Height="300">
                        <TreeView.ItemContainerStyle>
                            <Style TargetType="{x:Type TreeViewItem}">
                                <Setter 
                                    Property="IsExpanded" 
                                    Value="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged}"/>
                            </Style>
                        </TreeView.ItemContainerStyle>
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate 
                                ItemsSource="{Binding Childrent}">
                                <CheckBox IsChecked="{Binding IsSelected}">
                                    <TextBlock Text="{Binding Name}"/>
                                </CheckBox>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                    <StackPanel 
                        HorizontalAlignment="Center"
                        Margin="0, 5, 0, 0">
                        <StackPanel Orientation="Horizontal">
                            <Button 
                                Command="{Binding TabGrElementSelectAllCommand}"
                                Content="{x:Static langs:ApplicationLangs.DEMOST_COMMAND3_BTN_SELECT_ALL}"/>
                            <Button 
                                Command="{Binding TabGrElementUnSelectAllCommand}"
                                Margin="5,0,0,0"
                                Content="{x:Static langs:ApplicationLangs.DEMOST_COMMAND3_BTN_UN_SELECT_ALL}"/>
                            <Button 
                                Command="{Binding TabGrElementExpandCommand}"
                                Margin="5,0,0,0"
                                Content="{x:Static langs:ApplicationLangs.DEMOST_COMMAND3_BTN_EXHIBITION_GROUP}"/>
                            <Button 
                                Command="{Binding TabGrElementUnExpandCommand}"
                                Margin="5,0,0,0"
                                Content="{x:Static langs:ApplicationLangs.DEMOST_COMMAND3_BTN_REVENUE_GROUP}"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
            <GroupBox 
                Grid.Column="1"
                Header="レベル">
                <StackPanel>
                    <ListView 
                        ItemsSource="{Binding Levels}"
                        Height="300">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <CheckBox
                                    IsChecked="{Binding IsSelected}"
                                    Content="{Binding Name}"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <StackPanel 
                        Margin="0,5,0,0"
                        HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <Button 
                                Command="{Binding TabGrLevelSelectAllCommand}"
                                Content="{x:Static langs:ApplicationLangs.DEMOST_COMMAND3_BTN_SELECT_ALL}"/>
                            <Button 
                                Command="{Binding TabGrLevelUnSelectAllCommand}"
                                Margin="5,0,0,0"
                                Content="{x:Static langs:ApplicationLangs.DEMOST_COMMAND3_BTN_UN_SELECT_ALL}"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </Grid>
        <StackPanel 
            Margin="0,5,0,0"
            HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Button 
                    Command="{Binding CommandChoiceCommand}"
                    Content="{x:Static langs:ApplicationLangs.DEMOST_COMMAND3_BTN_CHOICE}"/>
                <Button 
                    Command="{Binding CommandCancelCommand}"
                    Margin="30,0,0,0"
                    Content="{x:Static langs:ApplicationLangs.DEMOST_COMMAND3_BTN_CANCEL}"/>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Window>
