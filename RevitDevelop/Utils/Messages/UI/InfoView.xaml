<Window 
    x:Class="RevitDevelop.Utils.Messages.UI.InfoView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:RevitDevelop.Utils.Messages.UI"
    mc:Ignorable="d"
    Title="Info" 
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterScreen"
    MinHeight="50" 
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    MinWidth="200">
    <Window.Resources>
        <Style x:Key="BtnCustom" TargetType="Button">
            <Setter Property="Height" Value="25"/>
            <Setter Property="Width" Value="100"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Brown"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="False">
                    <Setter Property="Background" Value="Transparent"/>
                </Trigger>
                <Trigger Property="IsMouseDirectlyOver" Value="True">
                    <Setter Property="Background" Value="Brown"/>
                </Trigger>
                <Trigger Property="IsMouseDirectlyOver" Value="False">
                    <Setter Property="Background" Value="Transparent"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <StackPanel>
        <StackPanel Background="#fff">
            <Grid Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.3*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel 
                Height="35"
                Name="image">
                <Image 
                    Height="{Binding ElementName=image, Path=ActualHeight}"
                    Source="/RevitDevelop;component/Utils/Messages/Imgs/Info.png"/>
            </StackPanel>
            <StackPanel 
                Grid.Column="1"
                Name="content">
                <TextBox 
                    x:Name="Content"
                    Width="300"
                    Height="{Binding ElementName=content, Path=ActualHeight}"
                    TextWrapping="Wrap"
                    IsReadOnly="True"
                    BorderThickness="0"
                    VerticalContentAlignment="Center"
                    Text="発注専用のダンパファミリのみが処理対象ですダンパファミリの変数に手動で入力した情報は削除されることがありま す。"/>
            </StackPanel>
        </Grid>
        </StackPanel>
        <StackPanel Background="#F0F0F0">
            <StackPanel 
                Margin="15"
                HorizontalAlignment="Right">
                <Button 
                    BorderBrush="#0078D4"
                    Background="#FDFDFD"
                    Style="{StaticResource BtnCustom}"
                    VerticalContentAlignment="Center"
                    Content="OK" Click="Button_Click"/>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Window>
